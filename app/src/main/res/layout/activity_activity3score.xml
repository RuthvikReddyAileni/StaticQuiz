<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity3score"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/blue">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="147dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/congo" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="289dp"
        android:layout_height="75dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="You have successfully finished your C language Quiz "
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <TextView
        android:id="@+id/textView00"
        android:layout_width="457dp"
        android:layout_height="99dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="- thanks for participating -"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906" />
    <Button
        android:id="@+id/mains"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/aclonica"
        android:layout_gravity="center"
        android:text="Back to Main Screen"
        app:backgroundTint="#374481" />

</LinearLayout>